{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asist.aptima.com/schemas/pygl_fov_version_info.json",
  "type": "object",
  "title": "The PyGL FoV Agent Version Info Schema",
  "version": "0.1",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
    "header": { "$ref": "../Common_Header/common_header.json" },
    "msg": { "$ref": "../Common_EventMessage/common_event_message.json" },
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The PyGL FoV Agent Version Info Data Schema",
      "required": [
        "version",
        "url",
        "dependencies"
      ],
      "properties": {
        "version": {
          "$id": "#/properties/data/properties/version",
          "type": "string",
          "title": "The Version Number Schema",
          "default": "0.0.0",
          "examples": [
            "0.3.0b1"
          ],
          "pattern": "^(.*)$"
        },
        "url": {
          "$id": "#/properties/data/properties/url",
          "type": "string",
          "title": "The URL Schema",
          "default": "Not Provided",
          "examples": [
            "https://gitlab.com/cmu_asist/PyGLFoVAgent.git"
          ],
          "pattern": "^(.*)$"
        },
        "dependencies": {
            "$id": "#/properties/data/properties/dependencies",
            "type": "array",
            "title": "The Version Dependencies Schema",
            "items": {
                "$ref": "./version_info_dependency.json"
            },
            "default": []
        }
      }
    }
  }
}
