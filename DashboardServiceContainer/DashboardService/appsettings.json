{
  "IsTesting": false,
  "MQTTSettings": {
    "RootTopic": "measurement",
    "EventTopic": "measurement/events",
    "InstanceTopic": "measurement/events/+/instances",
    "TemplateTopic": "measurement/templates",
    "ResultTopic": "measurement/events/+/instances/+/results",
    "HostileTopic": "pme/+/data/configurationchanges",
    "ConfigurationTopic": "pme/+/data/hostile",
    "Host": "localhost",
    "Port": "4503",
    "Client_Id": "DashboardService"
  },
  "LiteDB": {
    "ClearDatabaseTime": -1,
    "Location": "./dashboard.db",
    "MetadataTableName": "Metadata",
    "EventTableName": "Events",
    "TemplateTableName": "Templates",
    "InstanceTableName": "Instances",
    "ResultTableName": "Results",
    "DataItemTableName": "DataItem"
  },
  "SignalR": {
    "EventMethod": "ReceiveEvents",
    "HubEndPoint": "/measurement"
  },
  "Buffer": {
    "Timeout": 2000,
    "MaxSize": 1000,
    "BatchSize": 500
  },

  "ServerURL": "https://localhost:5005/",
  "MicroServiceName": "Dashboard Service",

  "IncludeIdentityServer": false,

  "UseEmbeddedStatusPage": true,

  "authentication": {
    "IdentityServerBaseUrl": "https://pmattdb.ma.aptima.com/AccessControl",
    "AllowedScopes": [ "api1" ],
    "RequireHttps": true,
    "IgnoreSSLErrors": false
  },

  "Logging": {
    "Console": {
      "IncludeScopes": false,
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "File": {
      "LogLevel": {
        "Default": "Information",
        "System": "Warning",
        "Microsoft": "Warning"
      },
      "Shared": false,
      "Template": "{Timestamp:o} {RequestId,13} [{Level:u3}] {Message} ({EventId:x8}){NewLine}{Exception}",
      "FlushInterval": 2,
      "PathFormat": "Logs/ASA_Server.log",
      "FileCountLimit": 31,
      "FileSizeLimit": 1073741824,
      "IncludeScopes": false,
      "BufferSize": null
    },
    "GELF": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  }
}
