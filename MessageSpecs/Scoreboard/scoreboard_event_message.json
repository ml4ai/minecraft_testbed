{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asist.aptima.com/schemas/event_state.json",
  "type": "object",
  "title": "The Scoreboard Event Schema",
  "version": "0.4",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
    "header": {
      "$ref": "../Common_Header/common_header.json",
      "properties": {         
        "message_type": {
        "$id": "#/properties/message_type",
        "type": "string",
        "title": "The Message_type Schema",
        "const": "event"
        }
      }
    },
    "msg": {
      "$ref": "../Common_Message/common_message.json",
      "properties": {         
        "sub_type": {
        "$id": "#/properties/sub_type",
        "type": "string",
        "title": "The Sub Type Schema",
        "const": "Event:Scoreboard"
        }
      }
    },
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The Scoreboard Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "scoreboard"
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/event/state/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "scoreboard": {
          "$id": "#/properties/data/properties/scoreboard",
          "type": "object",
          "title": "The Scoreboard Object Schema"
        }
      }
    }
  }
}
