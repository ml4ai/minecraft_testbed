{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gitlab-external.aptima.com/adapt/testbed/MessageSpecs/RubblePlaced/rubble_placed_event_message.json",
  "type": "object",
  "title": "The Rubble Placed Event Schema",
  "version": "0.1",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
    "header": {
      "$ref": "../Common_Header/common_header.json",
      "properties": {         
        "message_type": {
        "$id": "#/properties/message_type",
        "type": "string",
        "title": "The Message_type Schema",
        "const": "event"
        }
      }
    },
    "msg": {
      "$ref": "../Common_Message/common_message.json",
      "properties": {         
        "sub_type": {
        "$id": "#/properties/sub_type",
        "type": "string",
        "title": "The Sub Type Schema",
        "const": "Event:RubblePlaced"
        }
      }
    },
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The Rubble Placed Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "from_x",
        "from_y",
        "from_z",
        "to_x",
        "to_y",
        "to_z"
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/data/properties/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "rubble_x": {
          "$id": "#/properties/data/properties/rubble_x",
          "type": "number",
          "title": "The rubble_X Schema",
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "rubble_y": {
          "$id": "#/properties/data/properties/rubble_y",
          "type": "number",
          "title": "The rubble_Y Schema",
          "examples": [
            52
          ],
          "pattern": "^([0-9]+?)$"
        },
        "rubble_z": {
          "$id": "#/properties/data/properties/rubble_z",
          "type": "number",
          "title": "The rubble_Z Schema",
          "examples": [
            194
          ],
          "pattern": "^([0-9]+?)$"
        }
      }
    }
  }
}
