{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asist.aptima.com/schemas/chat.json",
  "type": "object",
  "title": "The Chat Event Schema",
  "version": "1.0",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
    "header": {
        "$ref": "../Common_Header/common_header.json",
        "properties": {         
          "message_type": {
            "$id": "#/properties/message_type",
            "type": "string",
            "title": "The Message_type Schema",
            "const": "chat"
          }
        }
    },
    "msg": {
        "$ref": "../Common_Message/common_message.json",
        "properties": {         
          "sub_type": {
            "$id": "#/properties/sub_type",
            "type": "string",
            "title": "The Sub Type Schema",
            "const": "Event:Chat"
          }
        }
    },
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The Chat Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "sender",
        "addressees",
        "text"            
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/event/state/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },    
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },      
        "sender": {
          "$id": "#/properties/data/properties/sender",
          "type": "string",
          "title": "The Sender Schema",
          "default": "",
          "examples": [
            "Aptiminer1"
          ],
          "pattern": "^(.*)$"
        },
        "addressees": {
          "$id": "#/properties/data/properties/addressees",
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "The Addressee List",
          "default": "",
          "examples": [
            "Player746"
          ]
        },
        "text": {
          "$id": "#/properties/data/properties/text",
          "type": "string",
          "title": "The Text Schema",
          "default": "",
          "examples": [
            "I'm in room 210"
          ],
          "pattern": "^(.*)$"
        }
      }
    }
  }
}
