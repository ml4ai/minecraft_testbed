{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asist.aptima.com/schemas/event_state.json",
  "type": "object",
  "title": "The Victim Signal Event State Schema",
  "version": "2.0",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
    "header": {
      "$ref": "../Common_Header/common_header.json",
      "properties": {         
        "message_type": {
        "$id": "#/properties/message_type",
        "type": "string",
        "title": "The Message_type Schema",
        "const": "event"
        }
      }
    },
    "msg": {
      "$ref": "../Common_Message/common_message.json",
      "properties": {         
        "sub_type": {
        "$id": "#/properties/sub_type",
        "type": "string",
        "title": "The Sub Type Schema",
        "const": "Event:VictimSignal"
        }
      }
    },
    "data": {
      "$id": "#/properties/message/properties/data",
      "type": "object",
      "title": "The Victim Signal Event State Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "playername",
        "participant_id",
        "message",
		    "x",
		    "y",
        "z",
        "roomname"
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/event/state/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "playername": {
          "$id": "#/properties/event/state/source_entity",
          "type": "string",
          "title": "The Playername Schema",          
          "examples": [
            "Player888, Aptiminer1"
          ],
          "pattern": "^(.*)$"
        },
        "participant_id": {
          "$id": "#/properties/data/participant_id",
          "type": "string",
          "title": "The Participant id Schema",
          "examples": [
            "E000321"
          ],
          "pattern": "^(.*)$"
        },
        "message": {
          "$id": "#/properties/event/state/message",
          "type": "string",
          "title": "The Message Schema",
          "enum": ["No Victim Detected","Regular Victim Detected","Critical Victim Detected"],
          "examples": [
            "No Victim Detected","Regular Victim Detected","Critical Victim Detected"
          ],
          "pattern": "^(.*)$"
        },
		    "x": {
          "$id": "#/properties/event/state/x",
          "type": "number",
          "title": "The X Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "y": {
          "$id": "#/properties/event/state/y",
          "type": "number",
          "title": "The Y Schema",          
          "examples": [
            52
          ],
          "pattern": "^([0-9]+?)$"
        },
        "z": {
          "$id": "#/properties/event/state/z",
          "type": "number",
          "title": "The Z Schema",          
          "examples": [
            194
          ],
          "pattern": "^([0-9]+?)$"
        },
        "roomname": {
          "$id": "#/properties/event/state/roomname",
          "type": "string",
          "title": "The Room Name Schema",
          "examples": [
            "A1","G8"
          ],
          "pattern": "^(.*)$"
        }        
      }
    }
  }
}
