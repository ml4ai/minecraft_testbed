{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asist.aptima.com/schemas/agent_rollcall_response.json",
  "type": "object",
  "title": "The agent rollcall response info Schema",
  "version": "0.1",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
      "header": {
          "$ref": "../../Common_Header/common_header.json",
          "properties": {         
            "message_type": {
              "$id": "#/properties/message_type",
              "type": "string",
              "title": "The Message_type Schema",
              "const": "agent"
            }
          }
      },
      "msg": {
          "$ref": "../../Common_Message/common_message.json",
          "properties": {         
            "sub_type": {
              "$id": "#/properties/sub_type",
              "type": "string",
              "title": "The Sub Type Schema",
              "const": "rollcall:response"
            }
          }
      },
      "data": {
      "$id": "#/properties/message/properties/data",
      "type": "object",
      "title": "The agent Rollcall Response Data Schema",
      "required": [
        "rollcall_id",
        "version",
        "status",
        "uptime"
      ],
      "properties": {
        "rollcall_id": {
          "$id": "#/properties/agent/rollcall_id",
          "type": "string",
          "title": "The agent rollcall id Schema",          
          "examples": [
            "385e4567-e49b-12e3-a456-426655440132"
          ],
          "pattern": "^(.*)$"
        },
        "version": {
          "$id": "#/properties/agent/version",
          "type": "string",
          "title": "The agent version Schema",          
          "examples": [
            "1.2.0-12","3.5.1-1" 
          ],
          "pattern":  "^([.]*)|(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
        },
        "status": {
          "$id": "#/properties/agent/status",
          "type": "string",
          "title": "The agent status Schema",
          "enum": ["initializing", "up", "unknown", "down"],
		  "examples": ["up"]
        },
        "uptime": {
          "$id": "#/properties/agent/uptime",
          "type": "number",
          "title": "The agent rollcall uptime schema",
          "examples": [780]
         },
        "agent_type": {
          "$id": "#/properties/agent/agent_type",
          "type": "string",
          "title": "The agent type Schema",
          "enum": ["ASI", "AC", "other"],
		  "examples": ["ASI"]
        }
      }
    }
  }
}
