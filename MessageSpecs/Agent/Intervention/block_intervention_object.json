{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://asist.aptima.com/schemas/block_intervention_object.json",
    "type": "object",
    "title": "The Block Intervention Object Schema",
    "version": "0.1",
    "required": [
        "id",
        "created",
        "start",
        "duration",
        "content",
        "block_type",
        "block_x",
        "block_y",
        "block_z",    
        "receivers",         
        "renderers",
        "explanation"
    ],
    "properties": {
      "id": {
        "$id": "#/properties/id",
        "type": "string",
        "title": "Unique Block Intervention Id Schema",
        "examples": [ "2daf58ab-f84f-48a6-89fd-c3c5d5558e97" ],
        "pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}"
      },
      "created": {
        "$id": "#/properties/created",
        "type": "string",
        "title": "Block Intervention Created Timestamp Schema",
        "examples": [ "2019-12-26T14:05:02.3412Z" ],
        "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}[.]?[0-9]{0,}?Z"
      },
      "start": {
        "$id": "#/properties/start",
        "type": "integer",
        "title": "Block Intervention Start Schema",
        "examples": [
          150300, 240000
        ]
      },
      "duration": {
        "$id": "#/properties/end",
        "type": "integer",
        "title": "Block Intervention End Schema",
        "examples": [
          15000, 10200
        ]
      },
      "content": {
        "$id": "#/properties/content",
        "type": "string",
        "title": "Block Intervention Content String Schema",
        "examples": [
          "Time is running low, you should consider changing exploring unexplored areas."
        ],
        "pattern": "^(.*)$"
      },
      "block_type": {
        "$id": "#/properties/block_type",
        "type": "string",
        "title": "Block Intervention Block_Type Schema",
        "enum":[
          "block_intervention_forward",
          "block_intervention_backward",
          "block_intervention_left",
          "block_intervention_right",
          "block_intervention_no_victims",
          "block_intervention_path_clear",
          "block_intervention_path_blocked",
          "block_intervention_unexplored"
        ]
      },
      "type": {
        "$id": "#/properties/type",
        "type": "string",
        "title": "Block Intervention Type Schema",
        "examples": [
          "block"
        ],
        "pattern": "block"
      },
      "block_x": {
        "$id": "#/properties/event/state/block_x",
        "type": "number",
        "title": "The Block_X Schema",          
        "examples": [
          -2185
        ]
      },
      "block_y": {
        "$id": "#/properties/event/state/block_y",
        "type": "number",
        "title": "The Block_Y Schema",          
        "examples": [
          52
        ]
      },
      "block_z": {
        "$id": "#/properties/event/state/block_z",
        "type": "number",
        "title": "The Block_Z Schema",          
        "examples": [
          194
        ]
      },        
      "receivers": {
        "$id": "#/properties/receiver",
        "type": "array",
        "items": {"type": "string"},
        "title": "The Block Intervention Receiver Schema",
        "examples": [
          "ASIST2", "[Aptiminer1"
        ],
        "pattern": "^(.*)$"
      },
      "renderers": {
        "$id": "#/properties/renderer",
        "type": "array",
        "title": "The Block Intervention Renderer Schema",
        "items": {"type": "string", "enum":["Minecraft_Chat","Minecraft_Block","Client_Map"]},
        "examples": [
          "Minecraft_Chat","Minecraft_Block","Client_Map"
        ]        
      },
      "explanation": {
        "$id": "#/properties/explanation",
        "type": "object",
        "title": "The Block Intervention Explanation Schema",
        "examples": [
          {
            "extra_agent_data":{

              "field0":"data0",

              "field1":{
                "something":"something"
              },

              "field2":{
                "somethingelse":"somethingelse"
              }

            }
          }
        ]       
      }
    }
  }