{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gitlab-external.aptima.com/adapt/testbed/MessageSpecs/VictimPlaced/victim_placed_event_message.json",
  "type": "object",
  "title": "The Rubble Collapse Event Schema",
  "version": "2.1",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
		"header": {
			"$ref": "../Common_Header/common_header.json",
			"properties": {         
			  "message_type": {
				"$id": "#/properties/message_type",
				"type": "string",
				"title": "The Message_type Schema",
				"const": "event"
			  }
			}
		},
		"msg": {
			"$ref": "../Common_Message/common_message.json",
			"properties": {         
			  "sub_type": {
				"$id": "#/properties/sub_type",
				"type": "string",
				"title": "The Sub Type Schema",
				"const": "Event:RubbleCollapse"
			  }
			}
		},
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The Victim Placed Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "participant_id",
        "triggerLocation_x",
        "triggerLocation_y",
        "triggerLocation_z",
        "fromBlock_x",
        "fromBlock_y",
        "fromBlock_z",
        "toBlock_x",
        "toBlock_y",
        "toBlock_z"
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/data/properties/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "participant_id": {
          "$id": "#/properties/data/participant_id",
          "type": "string",
          "title": "The Participant id Schema",
          "examples": [
            "E000321"
          ],
          "pattern": "^(.*)$"
        },
        "playername": {
          "$id": "#/properties/data/playername",
          "type": "string",
          "title": "The Playername Schema",          
          "examples": [
            "Aptiminer1"
          ],
          "pattern": "^(.*)$"
        },
        "type": {
          "$id": "#/properties/data/properties/color",
          "type": "string",
          "title": "The Type Schema",
          "enum": [ "victim_safe_a", "victim_safe_b","victim_safe_c" ],
          "examples": [
            "REGULAR"
          ]          
        },
		    "triggerLocation_x": {
          "$id": "#/properties/data/properties/triggerLocation_x",
          "type": "number",
          "title": "The Trigger Location X Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "triggerLocation_y": {
          "$id": "#/properties/data/properties/triggerLocation_y",
          "type": "number",
          "title": "The Trigger Location Y Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "triggerLocation_z": {
          "$id": "#/properties/data/properties/triggerLocation_z",
          "type": "number",
          "title": "The Trigger Location Z Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "fromBlock_x": {
          "$id": "#/properties/data/properties/fromBlock_x",
          "type": "number",
          "title": "The From Block Location X Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "fromBlock_y": {
          "$id": "#/properties/data/properties/fromBlock_y",
          "type": "number",
          "title": "The From Block Location Y Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "fromBlock_z": {
          "$id": "#/properties/data/properties/fromBlock_z",
          "type": "number",
          "title": "The From Block Location Z Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "toBlock_x": {
          "$id": "#/properties/data/properties/toBlock_x",
          "type": "number",
          "title": "The To Block Location X Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "toBlock_y": {
          "$id": "#/properties/data/properties/toBlock_y",
          "type": "number",
          "title": "The To Block Location Y Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "toBlock_z": {
          "$id": "#/properties/data/properties/toBlock_z",
          "type": "number",
          "title": "The To Block Location Z Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"        
        }                
      }
    }
  }
}
