{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asist.aptima.com/schemas/event_state.json",
  "type": "object",
  "title": "The Player Frozen State Change Schema",
  "version": "1.0",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
    "header": {
      "$ref": "../Common_Header/common_header.json",
      "properties": {         
        "message_type": {
        "$id": "#/properties/message_type",
        "type": "string",
        "title": "The Message_type Schema",
        "const": "event"
        }
      }
    },
    "msg": {
      "$ref": "../Common_Message/common_message.json",
      "properties": {         
        "sub_type": {
        "$id": "#/properties/sub_type",
        "type": "string",
        "title": "The Sub Type Schema",
        "const": "Event:PlayerFrozenStateChange"
        }
      }
    },
    "data": {
      "$id": "#/properties/message/properties/data",
      "type": "object",
      "title": "The Player Frozen State Change Data Schema",
      "required": [
        
        "mission_timer",
        "elapsed_milliseconds",
        "participant_id",
        "state_changed_to",      
		    "player_x",
		    "player_y",
        "player_z"
        
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/event/state/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "participant_id": {
          "$id": "#/properties/data/properties/participant_id",
          "type": "string",
          "title": "The Participant id Schema",
          "examples": [
            "E000231"
          ],
          "pattern": "^(.*)$"
        },
        "playername": {
          "$id": "#/properties/data/properties/playername",
          "type": "string",
          "title": "The Playername Schema",          
          "examples": [
            "Aptiminer1"
          ],
          "pattern": "^(.*)$"
        },
        "state_changed_to": {
          "$id": "#/properties/data/properties/triage_state",
          "type": "string",
          "title": "The State Changed To Schema",
          "enum": [ "FROZEN", "UNFROZEN" ],
          "examples": [
            "FROZEN"
          ],
          "pattern": "^(.*)$"
        },        
		    "player_x": {
          "$id": "#/properties/data/properties/player_x",
          "type": "number",
          "title": "The Player_X Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "player_y": {
          "$id": "#/properties/data/properties/player_y",
          "type": "number",
          "title": "The Player_Y Schema",          
          "examples": [
            52
          ],
          "pattern": "^([0-9]+?)$"
        },
        "player_z": {
          "$id": "#/properties/data/properties/player_z",
          "type": "number",
          "title": "The Player_Z Schema",          
          "examples": [
            194
          ],
          "pattern": "^([0-9]+?)$"
        },
        "medic_participant_id": {
          "$id": "#/properties/data/properties/medic_participant_id",
          "type": "string",
          "title": "The Medic Participant id Schema",
          "examples": [
            "E000321"
          ],
          "pattern": "^(.*)$"
        },
        "medic_playername": {
          "$id": "#/properties/data/properties/medic_playername",
          "type": "string",
          "title": "The Medic Playername Schema",          
          "examples": [
            "Aptiminer1"
          ],
          "pattern": "^(.*)$"
        }  
      }
    }
  }
}
