{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gitlab-external.aptima.com/adapt/testbed/MessageSpecs/GasLeakRemoved/gasleak_removed_event_message.json",
  "type": "object",
  "title": "The GasLeak Removed Event Schema",
  "version": "0.1",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
		"header": {
			"$ref": "../Common_Header/common_header.json",
			"properties": {         
			  "message_type": {
				"$id": "#/properties/message_type",
				"type": "string",
				"title": "The Message_type Schema",
				"const": "event"
			  }
			}
		},
		"msg": {
			"$ref": "../Common_Message/common_message.json",
			"properties": {         
			  "sub_type": {
				"$id": "#/properties/sub_type",
				"type": "string",
				"title": "The Sub Type Schema",
				"const": "Event:GasLeakRemoved"
			  }
			}
		},
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The GasLeak Placed Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "source",
		    "gasleak_x",
		    "gasleak_y",
        "gasleak_z"        
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/data/properties/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "source": {
          "$id": "#/properties/data/properties/source",
          "type": "string",
          "title": "The Source Schema",
          "examples": [
            "system"
          ],
          "pattern": "^(.*)$"
        },
        "gasleak_x": {
          "$id": "#/properties/data/properties/gasleak_x",
          "type": "number",
          "title": "The gasleak_X Schema",
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "gasleak_y": {
          "$id": "#/properties/data/properties/gasleak_y",
          "type": "number",
          "title": "The gasleak_Y Schema",
          "examples": [
            52
          ],
          "pattern": "^([0-9]+?)$"
        },
        "gasleak_z": {
          "$id": "#/properties/data/properties/gasleak_z",
          "type": "number",
          "title": "The gasleak_Z Schema",
          "examples": [
            194
          ],
          "pattern": "^([0-9]+?)$"
        }
      }
    }
  }
}
