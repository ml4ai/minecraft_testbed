{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asist.aptima.com/schemas/swing_event_message.json",
  "type": "object",
  "title": "The Swing Event Schema",
  "version": "0.1",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
    "header": {
        "$ref": "../Common_Header/common_header.json",
        "properties": {         
          "message_type": {
            "$id": "#/properties/message_type",
            "type": "string",
            "title": "The Message_type Schema",
            "const": "event"
          }
        }
    },
    "msg": {
        "$ref": "../Common_Message/common_message.json",
        "properties": {         
          "sub_type": {
            "$id": "#/properties/sub_type",
            "type": "string",
            "title": "The Sub Type Schema",
            "const": "Event:PlayerSwinging"
          }
        }
    },
    "data": {
      "$id": "#/properties/message/properties/data",
      "type": "object",
      "title": "The Swing Event Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "participant_id",
		    "swinging"
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/event/state/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "participant_id": {
          "$id": "#/properties/event/state/pparticipant_id",
          "type": "string",
          "title": "The Participant id Schema",
          "examples": [
            "E000231"
          ],
          "pattern": "^(.*)$"
        },
        "playername": {
          "$id": "#/properties/event/state/playername",
          "type": "string",
          "title": "The Playername Schema",          
          "examples": [
            "Aptiminer1"
          ],
          "pattern": "^(.*)$"
        },
        "swinging": {
          "$id": "#/properties/event/state/swinging",
          "type": "boolean",
          "title": "The Swinging Schema",
          "enum": [ true, false ],
          "examples": [
            true
          ]          
        }       
      }
    }
  }
}
