{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gitlab-external.aptima.com/adapt/testbed/MessageSpecs/ToolDepleted/tool_depleted_event_message.json",
  "type": "object",
  "title": "The Tool Depleted Event Schema",
  "version": "1.1",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
		"header": {
			"$ref": "../Common_Header/common_header.json",
			"properties": {         
			  "message_type": {
				"$id": "#/properties/message_type",
				"type": "string",
				"title": "The Message_type Schema",
				"const": "event"
			  }
			}
		},
		"msg": {
			"$ref": "../Common_Message/common_message.json",
			"properties": {         
			  "sub_type": {
				"$id": "#/properties/sub_type",
				"type": "string",
				"title": "The Sub Type Schema",
				"const": "Event:ToolDepleted"
			  }
			}
		},
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The Tool Depleted Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "participant_id",
        "tool_type"        
      ],
      "properties": {
        
        "mission_timer": {
          "$id": "#/properties/data/properties/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "pparticipant_id": {
          "$id": "#/properties/data/properties/participant_id",
          "type": "string",
          "title": "The Participant id Schema",
          "examples": [
            "E000321"
          ],
          "pattern": "^(.*)$"
        },
        "playername": {
          "$id": "#/properties/data/properties/playername",
          "type": "string",
          "title": "The PlayerName Schema",          
          "examples": [
            "Aptiminer1"
          ],
          "pattern": "^(.*)$"
        },
        "tool_type": {
          "$id": "#/properties/data/properties/tool_type",
          "type": "string",
          "title": "The Tool_Type Schema",
          "enum": [ "MEDKIT", "STRETCHER","STRETCHER_OCCUPIED","HAMMER","NULL"],
          "examples": [                
            "MEDKIT"
          ]          
        }
      }
    }
  }
}
