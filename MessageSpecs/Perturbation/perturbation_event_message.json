{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asist.aptima.com/schemas/event_state.json",
  "type": "object",
  "title": "The Perturbation Event State Schema",
  "version": "2.2",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
    "header": {
      "$ref": "../Common_Header/common_header.json",
      "properties": {         
        "message_type": {
        "$id": "#/properties/message_type",
        "type": "string",
        "title": "The Message_type Schema",
        "const": "event"
        }
      }
    },
    "msg": {
      "$ref": "../Common_Message/common_message.json",
      "properties": {         
        "sub_type": {
        "$id": "#/properties/sub_type",
        "type": "string",
        "title": "The Sub Type Schema",
        "const": "Event:Perturbation"
        }
      }
    },
    "data": {
      "$id": "#/properties/message/properties/data",
      "type": "object",
      "title": "The Perturbation Event Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "type",
        "mission_state"
		    
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/event/state/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "Not Initialized"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "type": {
          "$id": "#/properties/data/properties/type",
          "type": "string",
          "title": "The Type Schema",
          "enum":["blackout","rubble"],
          "examples": [
            "blackout","rubble"
          ],
          "pattern": "^(.*)$"
        },
        "mission_state": {
          "$id": "#/properties/data/properties/mission_state",
          "type": "string",
          "title": "The State Schema",
          "enum": [ "start", "stop" ],
          "examples": [
            "start","stop"
          ],
          "pattern": "^(.*)$"
        }       
      }
    }
  }
}
