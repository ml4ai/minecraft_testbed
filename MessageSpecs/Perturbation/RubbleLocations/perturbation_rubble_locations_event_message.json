{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asist.aptima.com/schemas/event_state.json",
  "type": "object",
  "title": "The Event:PerturbationRubbleLocations Schema",
  "version": "2.1",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
    "header": {
      "$ref": "../../Common_Header/common_header.json",
      "properties": {         
        "message_type": {
        "$id": "#/properties/header/properties/message_type",
        "type": "string",
        "title": "The Message_type Schema",
        "const": "event"
        }
      }
    },
    "msg": {
      "$ref": "../../Common_Message/common_message.json",
      "properties": {         
        "sub_type": {
        "$id": "#/properties/msg/properties/sub_type",
        "type": "string",
        "title": "The Sub Type Schema",
        "const": "Event:PerturbationRubbleLocations"
        }
      }
    },
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The Event:PerturbationRubbleLocations Data Schema",
      "required": [

        "mission_timer",
        "elapsed_milliseconds",
        "mission",
        "mission_blockage_list"
		    
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/data/properties/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/data/properties/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "mission": {
          "$id": "#/properties/data/properties//mission",
          "type": "string",
          "title": "The Mission Name Schema",          
          "examples": [
            "Saturn_A_Blackout","Saturn_A_Rubble"
          ],
          "pattern": "^(.*)$"
        },
        "mission_blockage_list": {
					"$id": "#/properties/data/properties//mission_blockage_list",
					"type": "array",
					"items": { "$ref": "./blockagelist_blockage.json" },
					"title": "The Blockage List Schema",
					"default": "",
					"examples": [
						"[ {\"x\" : -2088.0,\"y\" : 60.0,\"z\" : 146.0,\"block_type\" : \"gravel\",\"feature_type\" : \"obstruction\"}]"
					]
				}
      }
    }
  }
}
