{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gitlab-external.aptima.com/adapt/testbed/MessageSpecs/VictimPlaced/victim_placed_event_message.json",
  "type": "object",
  "title": "The Victim Evacuated Event Schema",
  "version": "2.2",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
		"header": {
			"$ref": "../Common_Header/common_header.json",
			"properties": {         
			  "message_type": {
				"$id": "#/properties/message_type",
				"type": "string",
				"title": "The Message_type Schema",
				"const": "event"
			  }
			}
		},
		"msg": {
			"$ref": "../Common_Message/common_message.json",
			"properties": {         
			  "sub_type": {
				"$id": "#/properties/sub_type",
				"type": "string",
				"title": "The Sub Type Schema",
				"const": "Event:VictimEvacuated"
			  }
			}
		},
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The Victim Placed Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "participant_id",
        "victim_x",
        "victim_y",
        "victim_z",
        "type",
        "victim_id",
        "success"
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/data/properties/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "participant_id": {
          "$id": "#/properties/data/participant_id",
          "type": "string",
          "title": "The Participant id Schema",
          "examples": [
            "E000321"
          ],
          "pattern": "^(.*)$"
        },
        "playername": {
          "$id": "#/properties/data/playername",
          "type": "string",
          "title": "The Playername Schema",          
          "examples": [
            "Aptiminer1"
          ],
          "pattern": "^(.*)$"
        },
        "type": {
          "$id": "#/properties/data/properties/color",
          "type": "string",
          "title": "The Type Schema",
          "enum": [ "victim_a, victim_b, victim_saved_a", "victim_saved_b", "victim_saved_c" ],
          "examples": [
            "victim_saved_a"
          ]          
        },
		    "victim_x": {
          "$id": "#/properties/data/properties/victim_x",
          "type": "number",
          "title": "The Victim_X Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "victim_y": {
          "$id": "#/properties/data/properties/victim_y",
          "type": "number",
          "title": "The Victim_Y Schema",          
          "examples": [
            52
          ],
          "pattern": "^([0-9]+?)$"
        },
        "victim_z": {
          "$id": "#/properties/data/properties/victim_z",
          "type": "number",
          "title": "The Victim_Z Schema",          
          "examples": [
            194
          ],
          "pattern": "^([0-9]+?)$"
        },        
        "victim_id": {
          "$id": "#/properties/victim_id",
          "type": "number",
          "title": "The Victim Id Schema",          
          "examples": [
            1,33,55
          ],
          "pattern": "^([0-9]+?)$"
        },
        "success": {
          "$id": "#/properties/success",
          "type": "boolean",
          "title": "The successful Evacuation Schema",
          "$comment": " This field will only be true if the victim is in the correct area AND is triaged. Otherwise it will be false. vitctim_a and victim_b types can be evacuated pre-triage, but they will have a false success value",          
          "examples": [
            true,false
          ]
        }                
      }
    }
  }
}
