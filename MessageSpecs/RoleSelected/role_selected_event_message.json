{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://gitlab-external.aptima.com/adapt/testbed/MessageSpecs/RoleSelected/role_selected_event_message.json",
    "type": "object",
    "title": "The Role Selected Event Schema",
    "version": "2.0",
    "required": [
      "header",
      "msg",
      "data"
    ],
    "properties": {
      "header": {
        "$ref": "../Common_Header/common_header.json",
        "properties": {         
          "message_type": {
          "$id": "#/properties/message_type",
          "type": "string",
          "title": "The Message_type Schema",
          "const": "event"
          }
        }
      },
      "msg": {
        "$ref": "../Common_Message/common_message.json",
        "properties": {         
          "sub_type": {
          "$id": "#/properties/sub_type",
          "type": "string",
          "title": "The Sub Type Schema",
          "const": "Event:RoleSelected"
          }
        }
      },
      "data": {
        "$id": "#/properties/data",
        "type": "object",
        "title": "The Role Selected Data Schema",
        "required": [
          "mission_timer",
          "elapsed_milliseconds",
          "participant_id",
          "new_role",
          "prev_role"
        ],
        "properties": {
          "mission_timer": {
            "$id": "#/properties/data/properties/mission_timer",
            "type": "string",
            "title": "The Mission Timer Schema",          
            "examples": [
              "8 : 36"
            ],
            "pattern": "^(.*)$"
          },
          "elapsed_milliseconds": {
            "$id": "#/properties/event/state/elapsed_milliseconds",
            "type": "number",
            "title": "The Elapsed Milliseconds Schema",          
            "examples": [
              5000, 77459, 689457
            ],
            "pattern": "^[0-9]+$"
          },
          "participant_id": {
            "$id": "#/properties/event/state/participant_id",
            "type": "string",
            "title": "The Participant id Schema",
            "examples": [
              "E000321"
            ],
            "pattern": "^(.*)$"
          },
          "playername": {
            "$id": "#/properties/event/state/playername",
            "type": "string",
            "title": "The PlayerName Schema",          
            "examples": [
              "Aptiminer1"
            ],
            "pattern": "^(.*)$"
          },
          "new_role": {
            "$id": "#/properties/data/properties/new_role",
            "type": "string",
            "title": "The New Role Schema",
            "enum": [ "None","Admin", "Transport_Specialist", "Engineering_Specialist","Medical_Specialist" ],
            "examples": [
                
                "Transport_Specialist"
            ]          
          },
          "prev_role": {
            "$id": "#/properties/data/properties/prev_role",
            "type": "string",
            "title": "The Prev Role Schema",
            "enum": [ "None","Admin", "Transport_Specialist", "Engineering_Specialist","Medical_Specialist" ],
            "examples": [
                
                "None"
            ]          
          }            
        }
      }
    }
  }
  
