{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://asist.aptima.com/schemas/userspeech.json",
    "type": "object",
    "title": "The ASIST user speech message Schema",
    "version": "0.1",
    "required": [
      "header",
      "msg"
    ],
    "properties": {
      "header": {
          "$ref": "../Common_Header/common_header.json",
          "properties": {         
            "message_type": {
              "$id": "#/properties/message_type",
              "type": "string",
              "title": "The Message_type Schema",
              "const": "status"
            }
          }
      },
      "msg": {
          "$ref": "../Common_Message/common_message.json",
          "properties": {         
            "sub_type": {
              "$id": "#/properties/sub_type",
              "type": "string",
              "title": "The Sub Type Schema",
              "const": "Status:UserSpeech"
            }
          }
      },
      "data": {
        "$id": "#/properties/data",
        "type": "object",
        "title": "The User Speech Message Schema",
        "required": [
          "playername",
          "text"
        ],
        "properties": {
          "playername": {
            "$id": "#/properties/data/properties/playername",
            "type": "string",
            "title": "The player name of the user who spoke the utterance",
            "examples": [
              "Aptiminer1"
            ],
            "pattern": "^(.*)$"
          },
          "text": {
            "$id": "#/properties/data/properties/text",
            "type": "string",
            "title": "The text of the utterance",
            "examples": [
              "Search down that hallway"
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    }
  }
  