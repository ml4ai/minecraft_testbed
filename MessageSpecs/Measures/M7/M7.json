{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://asist.aptima.com/schemas/M7.json",
    "type": "object",
    "title": "The M7 Schema",
    "version": "0.5",
    "required": [
        "player_info", "marker_block"
    ],
    "properties": {
        "player_info": {
            "$id": "#/properties/player_info",
            "type": "object",
            "title": "The player info",
            "required": [
                "player_name", "event_time"
            ],
            "properties": {
                "player_name":{
                    "$id": "#/properties/player_info/properties/player_name",
                    "type": "string",
                    "title": "The player name",          
                    "examples": ["Player123"],
                    "pattern": "^(.*)$"
                },
                "event_time": {
                    "$id": "#/properties/player_info/properties/event_time",
                    "type": "number",
                    "title": "The event time",          
                    "examples": [62863],
                    "pattern": "^[0-9]+$"
                }
            }
        },
        "marker_block": {
            "$id": "#/properties/marker_block",
            "type": "object",
            "title": "The marker block object",
            "required": [
                "marker_block_info", "nearest_door", "player_enters_door"
            ],
            "properties": {
                "marker_block_info": { 
                    "$id": "#/properties/marker_block/properties/marker_block_info",
                    "type": "object",
                    "title": "The marker block info object",
                    "required": [
                        "mission_timer", "elapsed_milliseconds", "playername",
                        "type", "marker_x", "marker_y", "marker_z"
                    ],
                    "properties": {
                        "mission_timer": {
                            "$id": "#/properties/marker_block/properties/marker_block_info/properties/mission_timer",
                            "type": "string",
                            "title": "The Mission Timer Schema",          
                            "examples": [
                                "8 : 36"
                            ],
                            "pattern": "^(.*)$"
                        },
                        "elapsed_milliseconds": {
                            "$id": "#/properties/marker_block/properties/marker_block_info/properties/elapsed_milliseconds",
                            "type": "number",
                            "title": "The Elapsed Milliseconds Schema",          
                            "examples": [
                                5000, 77459, 689457
                            ],
                            "pattern": "^[0-9]+$"
                        },
                        "playername": {
                            "$id": "#/properties/marker_block/properties/marker_block_info/properties/playername",
                            "type": "string",
                            "title": "The Playername Schema",          
                            "examples": [
                                "Aptiminer1"
                            ],
                            "pattern": "^(.*)$"
                        },
                        "type": {
                            "$id": "#/properties/marker_block/properties/marker_block_info/properties/type",
                            "type": "string",
                            "title": "The Type Schema",
                            "enum": [ "Marker Block 1", "Marker Block 2", "Marker Block 3","Marker Block 4","Marker Block 5","Marker Block 6"],
                            "examples": [
                                "Marker Block 1"
                            ]            
                        },
                        "marker_x": {
                            "$id": "#/properties/marker_block/properties/marker_block_info/properties/marker_x",
                            "type": "number",
                            "title": "The Marker_X Schema",          
                            "examples": [
                                -2185
                            ],
                            "pattern": "^([0-9]+?)$"
                        },
                        "marker_y": {
                            "$id": "#/properties/marker_block/properties/marker_block_info/properties/marker_y",
                            "type": "number",
                            "title": "The Marker_Y Schema",          
                            "examples": [
                                52
                            ],
                            "pattern": "^([0-9]+?)$"
                        },
                        "marker_z": {
                            "$id": "#/properties/marker_block/properties/marker_block_info/properties/marker_z",
                            "type": "number",
                            "title": "The Marker_Z Schema",          
                            "examples": [
                                194
                            ],
                            "pattern": "^([0-9]+?)$"
                        }  
                    }
                 },
                "nearest_door": {
                    "$id": "#/properties/marker_block/properties/nearest_door",
                    "type": "object",
                    "title": "The nearest_door object",
                    "required": [
                        "door_properties", "distance"
                    ],
                    "properties": {
                        "door_properties": {
                            "$id": "#/properties/marker_block/properties/nearest_door/properties/door_properties",
                            "type": "object",
                            "title": "The door_properties object",
                            "required": [
                                "door_id", "bounds"
                            ],
                            "properties": {
                                "door_id": {
                                    "$id": "#/properties/marker_block/properties/nearest_door/properties/door_properties/properties/door_id",
                                    "type": "string",
                                    "title": "The door_id",          
                                    "examples": ["c_26_-75_27_-74"],
                                    "pattern": "^(.*)$"
                                },
                                "bounds": {
                                    "$id": "#/properties/marker_block/properties/nearest_door/properties/door_properties/properties/bounds",
                                    "type": "array",
                                    "title": "The bounds array",   
                                    "items": { "$ref": "../coords.json" }       
                                }
                            }    
                        },
                        "distance": {
                            "$id": "#/properties/marker_block/properties/nearest_door/properties/distance",
                            "type": "number",
                            "title": "The distance to door",          
                            "examples": [6.5],
                            "pattern": "^[+-]?([0-9]*[.])?[0-9]+$"
                        }
                    }
                },
                "player_enters_door": {
                    "$id": "#/properties/marker_block/properties/player_enters_door",
                    "type": "boolean",
                    "title": "The player_enters_door value",          
                    "examples": [true, false],
                    "pattern": "^(?i)(true|false)$"
                }
            }  
        }
    }
}