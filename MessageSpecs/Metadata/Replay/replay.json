{
	"definitions": {

	},
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://asist.aptima.com/schemas/replay.json",
	"type": "object",
	"title": "The Root Schema",
	"required": [ "id", "replay_id", "replay_parent_id", "replay_parent_type", "date", "ignore_list" ],
	"properties": {
		"id": {
			"$id": "#/properties/id",
			"type": "integer",
			"title": "The ID Schema",
			"examples": [ 1 ]
		},
		"replay_id": {
			"$id": "#/properties/replay_id",
			"type": "string",
			"title": "The Replay Id Schema",
			"default": "",
			"examples": [ "123e4567-e89b-12d3-a456-426655440000" ],
			"pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}"
		},
		"replay_parent_id": {
			"$id": "#/properties/replay_parent_id",
			"type": "string",
			"title": "The Replay Parent Id Schema",
			"default": "",
			"examples": [ "123e4567-e89b-12d3-a456-426655440000" ],
			"pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}"
		},
		"replay_parent_type": {
			"$id": "#/properties/replay_parent_type",
			"type": "string",
			"title": "The Replay Parent Type Schema",
			"enum": ["TRIAL", "REPLAY"]
		},
		"date": {
			"$id": "#/properties/date",
			"type": "string",
			"title": "The Date Schema",
			"default": "",
			"examples": [ "2019-12-26T12:47:23.123Z" ],
			"pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}[.]?[0-9]{0,}?Z"
		},
		"ignore_list": {
			"$id": "#/properties/ignore_list",
			"type": "array",
			"items": {
				"type": "string"
			},
			"title": "The Ignore List Schema",
			"default": "",
			"examples": [ "[\"message_type 1\", \"message_type 2\", \"message_type 3\"]" ],
			"pattern": "^(.*)$"
		}
	}
}