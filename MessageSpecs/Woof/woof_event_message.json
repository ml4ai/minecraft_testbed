{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asist.aptima.com/schemas/event_state.json",
  "type": "object",
  "title": "The Woof Event State Schema",
  "version": "0.5",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
    "header": {
      "$ref": "../Common_Header/common_header.json",
      "properties": {         
        "message_type": {
        "$id": "#/properties/message_type",
        "type": "string",
        "title": "The Message_type Schema",
        "const": "event"
        }
      }
    },
    "msg": {
      "$ref": "../Common_Message/common_message.json",
      "properties": {         
        "sub_type": {
        "$id": "#/properties/sub_type",
        "type": "string",
        "title": "The Sub Type Schema",
        "const": "Event:Woof"
        }
      }
    },
    "data": {
      "$id": "#/properties/message/properties/data",
      "type": "object",
      "title": "The Woof Event State Data Schema",
      "required": [
        "mission_timer",
        "elapsed_milliseconds",
        "source_entity",
        "message",
		    "woof_x",
		    "woof_y",
        "woof_z"
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/event/state/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "source_entity": {
          "$id": "#/properties/event/state/source_entity",
          "type": "string",
          "title": "The Source_Entity Schema",          
          "examples": [
            "Search and Rescure Dog"
          ],
          "pattern": "^(.*)$"
        },
        "message": {
          "$id": "#/properties/event/state/message",
          "type": "string",
          "title": "The Message Schema",
          "examples": [
            "woof"
          ],
          "pattern": "^(.*)$"
        },
		    "woof_x": {
          "$id": "#/properties/event/state/woof_x",
          "type": "number",
          "title": "The woof_X Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "woof_y": {
          "$id": "#/properties/event/state/woof_y",
          "type": "number",
          "title": "The woof_Y Schema",          
          "examples": [
            52
          ],
          "pattern": "^([0-9]+?)$"
        },
        "woof_z": {
          "$id": "#/properties/event/state/woof_z",
          "type": "number",
          "title": "The woof_Z Schema",          
          "examples": [
            194
          ],
          "pattern": "^([0-9]+?)$"
        }        
      }
    }
  }
}
