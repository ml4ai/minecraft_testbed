{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gitlab-external.aptima.com/adapt/testbed/MessageSpecs/VictimNoLongerSafe/victim_no_longer_safe_event_message.json",
  "type": "object",
  "title": "The Victim No Longer Safe Event Schema",
  "version": "0.1",
  "required": [
    "header",
    "msg",
    "data"
  ],
  "properties": {
		"header": {
			"$ref": "../Common_Header/common_header.json",
			"properties": {         
			  "message_type": {
				"$id": "#/properties/message_type",
				"type": "string",
				"title": "The Message_type Schema",
				"const": "event"
			  }
			}
		},
		"msg": {
			"$ref": "../Common_Message/common_message.json",
			"properties": {         
			  "sub_type": {
				"$id": "#/properties/sub_type",
				"type": "string",
				"title": "The Sub Type Schema",
				"const": "Event:VictimNoLongerSafe"
			  }
			}
		},
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The Victim No Longer Safe Data Schema",
      "required": [
        "mission_timer",  
        "elapsed_milliseconds",             
		    "victim_x",
		    "victim_y",
        "victim_z",
        "color"
      ],
      "properties": {
        "mission_timer": {
          "$id": "#/properties/data/properties/mission_timer",
          "type": "string",
          "title": "The Mission Timer Schema",          
          "examples": [
            "8 : 36"
          ],
          "pattern": "^(.*)$"
        },
        "elapsed_milliseconds": {
          "$id": "#/properties/event/state/elapsed_milliseconds",
          "type": "number",
          "title": "The Elapsed Milliseconds Schema",          
          "examples": [
            5000, 77459, 689457
          ],
          "pattern": "^[0-9]+$"
        },
        "color": {
          "$id": "#/properties/data/properties/color",
          "type": "string",
          "title": "The Color Schema",
          "enum": [ "Green", "Yellow" ],
          "examples": [
            "Green"
          ]          
        },
		    "victim_x": {
          "$id": "#/properties/data/properties/victim_x",
          "type": "number",
          "title": "The Victim_X Schema",          
          "examples": [
            -2185
          ],
          "pattern": "^([0-9]+?)$"
        },
        "victim_y": {
          "$id": "#/properties/data/properties/victim_y",
          "type": "number",
          "title": "The Victim_Y Schema",          
          "examples": [
            52
          ],
          "pattern": "^([0-9]+?)$"
        },
        "victim_z": {
          "$id": "#/properties/data/properties/victim_z",
          "type": "number",
          "title": "The Victim_Z Schema",          
          "examples": [
            194
          ],
          "pattern": "^([0-9]+?)$"
        }        
      }
    }
  }
}
